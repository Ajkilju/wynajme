@model UstawieniaViewModel


<div class="container">

    <div class="LightGrayConteiner">

        <h3 class="col-md-2">@Model.Name @Model.LastName</h3>

        @{
            if (Model.Image.Length < 10)
            {
                <img src="~/images/DefaultUserPhoto.png" class="img-circle" style="width:100px; height:100px;" />
            }
            else
            {
                var base64 = Convert.ToBase64String(Model.Image);
                var patch = String.Format("data:image/gif;base64,{0}", base64);
                <img src='@patch' class="img-circle" style="width:100px; height:100px;" />
            }
        }

    </div>

    <div class="row">

        <div class="col-md-3">
            <div class="LightGrayConteiner">
                <a asp-controller="Manage" asp-action="Index" class="btn button-purple" style="margin-bottom:5px; margin-top:5px"><strong>Moje ogloszenia</strong></a>
                <a asp-controller="Manage" asp-action="Index" class="btn button-purple" style="margin-bottom:5px; margin-top:5px"><strong>Obserwowane</strong></a>
            </div>
            <div class="LightGrayConteiner">
                <a asp-action="Ustawienia" class="btn button-purple"><strong>Ustawienia</strong></a>
            </div>
        </div>

        <div class="col-md-7">
            <form asp-action="Ustawienia" enctype="multipart/form-data">

                <div class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="col-md-2 control-label"></label>
                        <div class="col-md-5">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName" class="col-md-2 control-label"></label>
                        <div class="col-md-5">
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
                        <div class="col-md-5">
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-5">
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <label class="btn btn-default btn-file" for="multiple_input_group">
                                        <input id="multiple_input_group" type="file" name="image" /> Dodaj zdjecie
                                    </label>
                                </span>
                                <span class="file-input-label"></span>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Zapisz zmiany" class="btn button-purple" />
                        </div>
                    </div>

                </div>
            </form>

        </div>
    </div>
</div>




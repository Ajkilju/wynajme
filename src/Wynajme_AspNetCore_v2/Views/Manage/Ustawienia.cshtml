@model UstawieniaViewModel


<div class="container">

    <div class="LightGrayConteiner">

        <div class="row">

            <div class="col-md-2">
                <h3>@Model.Name </h3>
            </div>

            @{
                if (Model.Image.Length < 10)
                {
                    <div class="col-md-1">
                        <img src="~/images/DefaultUserPhoto.png" class="img-circle" style="width:100px; height:100px;" />
                    </div>
                }
                else
                {
                    var base64 = Convert.ToBase64String(Model.Image);
                    var patch = String.Format("data:image/gif;base64,{0}", base64);
                    <div class="col-md-1">
                        <img src='@patch' class="img-circle" style="width:100px; height:100px;" />
                    </div>
                }
            }


            <div class="col-md-7" style="text-align:center; padding-top:30px">
                <a asp-controller="Manage" asp-action="Index" class="btn button-purple" style="margin-bottom:5px; margin-top:5px"><strong>Moje ogloszenia</strong></a>
                <a asp-controller="Manage" asp-action="Obserwowane" class="btn button-purple" style="margin-bottom:5px; margin-top:5px"><strong>Obserwowane</strong></a>
                <a asp-action="Ustawienia" class="btn button-purple-selected"><strong>Ustawienia</strong></a>
            </div>

        </div>

    </div>

    <div class="row">

        <div class="col-md-offset-3 col-md-6" style="margin-top:50px;">
            <form asp-action="Ustawienia" enctype="multipart/form-data">

                <div class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <label class="btn btn-default btn-file" for="multiple_input_group">
                                        <input id="multiple_input_group" type="file" name="image" /> Dodaj zdjecie
                                    </label>
                                </span>
                                <span class="file-input-label"></span>
                            </div>
                        </div>
                    </div>


                    <div style="text-align:center;">

                        <button type="submit" class="btn button-purpleBack" style="width:250px;">Zapisz zmiany</button>

                    </div>

                </div>
            </form>

        </div>
    </div>
</div>

<div style="height:500px;"></div>




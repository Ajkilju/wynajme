                   asp-route-kuchniagaz="@Model.KuchniaGaz"
                   asp-route-kuchniael="@Model.KuchniaEl"
                   asp-route-pralka="@Model.Pralka"
                   asp-route-wanna="@wannaRoute"
                   asp-route-prysznic="@Model.Prysznic">
                    Wanna
                </a>
                <br />
                @{
                    Boolean? prysznicRoute = null;
                    if (Model.Prysznic == true)
                    {
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                    }
                    else
                    {
                        <span>--</span>
                        prysznicRoute = true;
                    }
                }

                <a asp-controller="Ogloszenie"
                   asp-action="Index"
                   asp-route-searchString="@Model.SearchStringRoute"
                   asp-route-kategoria="@Model.AktualnaKategoria"
                   asp-route-miasto="@Model.AktualneMiasto"
                   asp-route-cenaod="@Model.CenaOd"
                   asp-route-cenado="@Model.CenaDo"
                   asp-route-sortorder="@Model.SortOrderRoute"
                   asp-route-pagesize="@Model.PageSize"
                   asp-route-zmywarka="@Model.Zmywarka"
                   asp-route-lodowka="@Model.Lodowka"
                   asp-route-mikrofala="@Model.Mikrofala"
                   asp-route-kuchniagaz="@Model.KuchniaGaz"
                   asp-route-kuchniael="@Model.KuchniaEl"
                   asp-route-pralka="@Model.Pralka"
                   asp-route-wanna="@Model.Wanna"
                   asp-route-prysznic="@prysznicRoute">
                    Prysznic
                </a>
            </p>
        </div>

    </div>


    <div class="col-md-8">

        @foreach (var item in Model.Ogloszenia)
        {

            if (item.Miniature == null)
            {
                ViewData["imgSrc"] = "~/images/DefaultOglPhoto.png";
            }
            else
            {
                var base64 = Convert.ToBase64String(item.Miniature);
                ViewData["imgSrc"] = String.Format("data:image/gif;base64,{0}", base64);
            }

            <div class="row">

                <hr />

                <div class="col-md-4">
                    <img src='@ViewData["imgSrc"]' style="max-width:100%; max-height:180px;" asp-append-version="true" />
                </div>

                <div class="col-md-8">
                    <div class="row">
                        <a asp-action="Details" asp-route-id="@item.OgloszenieId"><h4 style="color:#4a94a3"><strong>@item.Tytul</strong></h4></a>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <p>
                                @item.Miasto.Nazwa<br />
                                @item.Kategoria.Nazwa<br />
                            </p>

                            <p>
                                @{
                                    if (item.Zmywarka == true)
                                    {<span class="glyphicon glyphicon-glass" aria-hidden="true"></span>}
                                    if (item.Lodowka == true)
                                    {<span class="glyphicon glyphicon-apple" aria-hidden="true"></span>}
                                    if (item.Mikrofala == true)
                                    {<span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span>}
                                    if (item.KuchniaGaz == true || item.KuchniaEl == true)
                                    {<span class="glyphicon glyphicon-flash" aria-hidden="true"></span>}
                                    if (item.Pralka == true)
                                    {<span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>}
                                    if (item.Wanna == true || item.Prysznic == true)
                                    {<span class="glyphicon glyphicon-tint" aria-hidden="true"></span>}
                                }
                            </p>
                            @Html.DisplayFor(modelItem => item.DataDodania)
                        </div>
                        <h3 class="col-md-4" style="text-align:right"><strong>@item.Cena zl</strong></h3>
                    </div>
                </div>


            </div>

                                    }

        <pager source="Model.Ogloszenia" />

    </div>


